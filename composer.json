{
    "name": "kangaroorewards/oauth2-kangaroo-rewards",
    "description": "Kangaroo Rewards OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Valentin Ursuleac",
            "email": "ursuleacv@gmail.com",
            "homepage": "http://valnet.ca",
            "role": "Developer"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authentication",
        "Kangaroo Rewards",
        "Kangaroo",
        "loyalty"
    ],
    "require": {
        "php": "^5.6 || ^7.0 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "league/oauth2-client": "~2.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpunit/phpunit": "^5.7 || ^6.0",
        "squizlabs/php_codesniffer": "^2.3 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "KangarooRewards\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KangarooRewards\\OAuth2\\Client\\Test\\": "tests/src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "scripts": {
        "check": "phpcs src --standard=psr12 -sp"
    }
}
